<configuration debug="false" scan="true" scanPeriod="20 seconds">
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{"yyyy-MM-dd'T'HH:mm:ss,SSS", UTC} [%thread] %level %logger{36} - %msg %n</pattern>
        </encoder>
    </appender>

    <logger name="com.extole" level="${blackboxLogLevel:-trace}" additivity="false">
        <appender-ref ref="stdout"/>
    </logger>

    <root level="off">
        <appender-ref ref="stdout"/>
    </root>
</configuration>
